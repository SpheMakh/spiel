galsim_script:
  class: File
  path: galsim.yaml

# Telescope name
telescope: meerkat

# Phase tracking centre of observation
direction: J2000,0deg,-30deg

# Synthesis time of observation
synthesis: 0.128

# Integration time in seconds
dtime: 10

# Start frequency of observation
freq0: 750MHz

# Channel width
dfreq: 1MHz

# Number of channels
nchan: 1
